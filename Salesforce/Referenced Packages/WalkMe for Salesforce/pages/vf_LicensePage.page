    <br/>
    <hr/>
    <div style="font-size:14px; margin-top: 10px;"> Choose Account Type: </div>
    <div>
          
 <div class="SnippetSelection">
                <apex:selectRadio id="Package" value="{!UserPackageChoice}" layout="pageDirection" >
