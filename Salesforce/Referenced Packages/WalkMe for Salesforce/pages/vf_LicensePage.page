                </div>




                <div>
                 <apex:commandButton image="{!URLFOR($Resource.WM4SF3__Save_button)}" action="{!SaveMethod}"/>
                
           
                <span style="margin:-15px 0px 10px 0px">
                 <apex:outputText value="By clicking the button you agree to WalkMe" style="font-size:10px;"/>
